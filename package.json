{
  "name": "edith-project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest src/tests/security",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres",
    "db:logs": "docker-compose logs -f postgres",
    "db:gui": "docker-compose --profile gui up -d",
    "db:studio": "npx prisma studio",
    "db:seed": "npx prisma db seed",
    "db:setup": "npx prisma migrate deploy && npx prisma generate && npm run db:seed"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/bcrypt": "^6.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/speakeasy": "^2.0.10",
    "@types/validator": "^13.15.2",
    "bcrypt": "^6.0.0",
    "buffer": "^6.0.3",
    "dompurify": "^3.2.6",
    "express-rate-limit": "^8.0.1",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "next": "15.4.6",
    "prisma": "^6.13.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "speakeasy": "^2.0.0",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jest": "^29.7.0",
    "node-mocks-http": "^1.17.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
